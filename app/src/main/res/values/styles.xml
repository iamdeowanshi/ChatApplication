<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!--<item name="colorPrimaryDark">#dd204b</item>-->
</style>
    <style name="ToolBarStyle" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Theme.SelectDate" parent="@android:style/Theme.Holo.NoActionBar">
        <item name="android:editTextStyle">@style/Widget.EditText.Black</item>
        <item name="android:verticalDivider">@style/vertical</item>
    </style>

    <style name="vertical" parent="@android:style/Widget.EditText">
        <item name="android:background">#fff</item>
    </style>

    <style name="Widget.EditText.Black" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#fff</item>
        <item name="android:thumbTextPadding">5dp</item>
    </style>

    <style name="FullyTranslucent" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:progressBarStyle">@style/InvisibleProgress</item>
    </style>

    <style name="InvisibleProgress">
        <item name="android:visibility">gone</item>
    </style>

</resources>
