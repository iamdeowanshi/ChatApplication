<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:emojicon="http://schemas.android.com/apk/res-auto"
                android:background="@drawable/gradient_purple_blue"
                android:orientation="vertical">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/img_dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        app:siBorderWidth="3dp"
        app:siBorderColor="#fff"
        android:layout_marginTop="60dp"/>

    <com.mtvindia.connect.ui.custom.UbuntuTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_name"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img_dp"
        android:textSize="12sp"
        android:layout_marginTop="20dp"/>

    <com.mtvindia.connect.ui.custom.UbuntuTextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt_about"
        android:textColor="#fff"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_below="@+id/txt_name"
        android:layout_marginTop="30dp"/>

    <com.mtvindia.connect.ui.custom.UbuntuTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_about"
        android:id="@+id/txt_common"
        android:textColor="#fff"
        android:textSize="13sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <com.mtvindia.connect.ui.custom.UbuntuTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_above="@+id/layout_chat"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:text="Say HI to know more about them"/>

    <RelativeLayout
        android:id="@+id/layout_chat"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/chat_box">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:id="@+id/img_smiley"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_smiley" />

        <com.mtvindia.connect.ui.custom.UbuntuEditText
            android:id="@+id/edt_message"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/img_smiley"
            android:layout_toLeftOf="@+id/icon_send"
            android:background="@android:color/transparent"
            android:hint="Type message here..."
            android:maxHeight="90dp"
            android:scrollbars="vertical"
            android:textColorHint="#c0c0c0" />

        <ImageButton
            android:id="@+id/icon_send"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/icon_send" />

    </RelativeLayout>


    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="#c5c5c5"
        android:indeterminateTintMode="src_atop"
        android:visibility="invisible" />

</RelativeLayout>