<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_yellow_red"
                android:orientation="vertical">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/img_dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        app:siBorderColor="#fff"
        app:siBorderWidth="3dp"/>

    <com.mtvindia.connect.ui.custom.UbuntuTextView
        android:id="@+id/txt_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Hello!"
        android:textColor="#fff"
        android:textSize="23.67sp"/>

    <com.mtvindia.connect.ui.custom.UbuntuTextView
        android:id="@+id/txt_find_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_hello"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Let's find you a perfect match."
        android:textColor="#fff"
        android:textSize="15.67sp"/>


    <com.mtvindia.connect.ui.custom.UbuntuTextView
        android:id="@+id/txt_prim_quest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_find_match"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="15.67sp"/>

    <LinearLayout
        android:id="@+id/img_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_prim_quest"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center">
        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/img_dp_big_1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:visibility="visible"
            app:siBorderColor="#fff"
            app:siBorderWidth="3dp"/>
</LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_marginTop="35dp"
            android:background="#d5d5d5"
            android:visibility="gone"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center_horizontal">
        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/img_dp_big_2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:visibility="visible"
            app:siBorderColor="#fff"
            app:siBorderWidth="3dp"/>
</LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_layout"
        android:layout_marginTop="10dp">

        <com.mtvindia.connect.ui.custom.UbuntuTextView
            android:id="@+id/txt_option_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="#fff"
            android:textSize="12sp"/>

        <com.mtvindia.connect.ui.custom.UbuntuTextView
            android:id="@+id/txt_option_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="#fff"
            android:textSize="12sp"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="#c5c5c5"
        android:visibility="invisible"/>

</RelativeLayout>