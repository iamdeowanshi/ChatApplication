<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_yellow_red"
    android:orientation="vertical">

    <com.mtvindia.connect.ui.custom.UbuntuTextView
        android:id="@+id/txt_second_quest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="60dp"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="17.67sp" />

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/img_dp_big_1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/txt_second_quest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:siBorderColor="#fff"
        app:siBorderWidth="3dp" />

    <com.mtvindia.connect.ui.custom.UbuntuTextView
        android:id="@+id/txt_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_dp_big_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="15.67sp" />

    <com.mtvindia.connect.ui.custom.UbuntuTextView
        android:id="@+id/txt_other_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="#fff"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_other_people"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/circle1"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:background="@drawable/draw_circle" />

        <View
            android:layout_width="@dimen/line_width"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="#fca919" />

        <View
            android:id="@+id/circle2"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:background="@drawable/draw_circle" />

        <View
            android:layout_width="@dimen/line_width"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="#fca919" />

        <View
            android:id="@+id/circle3"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:background="@drawable/draw_circle" />

        <View
            android:layout_width="@dimen/line_width"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="#fca919" />

        <View
            android:id="@+id/circle4"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:background="@drawable/draw_circle" />

        <View
            android:layout_width="@dimen/line_width"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="#fca919" />

        <View
            android:id="@+id/circle5"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:background="@drawable/draw_circle" />

        <View
            android:layout_width="@dimen/line_width"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="#fca919" />

        <View
            android:id="@+id/circle6"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:background="@drawable/draw_circle" />

        <View
            android:layout_width="@dimen/line_width"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="#fca919" />

        <View
            android:id="@+id/circle7"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:background="@drawable/draw_circle" />

        <View
            android:layout_width="@dimen/line_width"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="#fca919" />

        <View
            android:id="@+id/circle8"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:background="@drawable/draw_circle" />

        <View
            android:layout_width="@dimen/line_width"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="#fca919" />

        <View
            android:id="@+id/circle9"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:background="@drawable/draw_circle" />

        <View
            android:layout_width="@dimen/line_width"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="#fca919" />

        <View
            android:id="@+id/circle10"
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:background="@drawable/draw_circle" />

    </LinearLayout>

    <com.mtvindia.connect.ui.custom.UbuntuTextView
        android:id="@+id/txt_left_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:textSize="13.67sp" />

    <com.mtvindia.connect.ui.custom.UbuntuButton
        android:id="@+id/btn_continue"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_below="@+id/progress_bar"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/bg_button_state"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="14sp" />

</RelativeLayout>