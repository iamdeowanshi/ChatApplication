<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_purple_blue"
    android:orientation="vertical">

    <com.mtvindia.connect.ui.custom.UbuntuTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="80dp"
        android:id="@+id/txt_active_chat"
        android:text="Active Chats"
        android:textColor="#fff"
        android:textSize="26sp" />


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chat_list"
        android:layout_below="@+id/txt_active_chat"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="40dp"/>

    <com.mtvindia.connect.ui.custom.UbuntuTextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="#fff"
        android:textSize="20sp"
        android:text="No chats Available " />


</RelativeLayout>