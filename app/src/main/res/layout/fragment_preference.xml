<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_red_purple"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="70dp"
        android:text="Edit your preference"
        android:textColor="#fff"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/layout_interested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_interested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:src="@drawable/icon_interested" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/icon_interested"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/icon_interested"
            android:gravity="center"
            android:text="I&apos;m interested in"
            android:textColor="#fff"
            android:textSize="15sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_dialog_interested"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@+id/layout_interested"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/text_interested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dating"
            android:textColor="#fff"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/icon_drop_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:src="@drawable/icon_dropdown" />

        <View
            android:id="@+id/view1"
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_below="@+id/text_interested"
            android:background="#e9e9e9" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_meet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_dialog_interested"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_meet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:src="@drawable/icon_meet" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="I'd like to meet"
            android:textColor="#fff"
            android:textSize="15sp" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/layout_dialog_meet"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@+id/layout_meet"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/text_meet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Men"
            android:textColor="#fff"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/icon_drop_down2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:src="@drawable/icon_dropdown" />

        <View
            android:id="@+id/view2"
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_below="@+id/text_meet"
            android:background="#e9e9e9" />

    </RelativeLayout>

    <Button
        android:id="@+id/save"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@id/layout_dialog_meet"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_border"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="13sp" />

</RelativeLayout>