<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_red_purple_no_image"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mtvindia.connect.ui.activity.LoginActivity">


    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:src="@drawable/img_logo" />

    <TextView
        android:id="@+id/txt_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Hello!"
        android:textColor="#fff"
        android:textSize="30sp"
        android:fontFamily="ubuntu"/>

    <TextView
        android:id="@+id/txt_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_hello"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Sign up and start using the app."
        android:textColor="#fff"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/power_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txt_sign"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:background="@null"
        android:src="@drawable/img_power" />

    <TextView
        android:id="@+id/txt_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/power_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="Sign up using your social account."
        android:textColor="#fff"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_fb"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_social"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_button_state"
        android:text="Facebook"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="13sp" />

    <Button
        android:id="@+id/btn_gPlus"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_fb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_button_state"
        android:text="Google"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="13sp" />

    <ProgressBar
        android:id="@+id/progress_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/purple"
        android:indeterminateTintMode="src_atop"
        android:visibility="invisible" />


</RelativeLayout>
