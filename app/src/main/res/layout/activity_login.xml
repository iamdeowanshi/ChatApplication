<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient_red_purple_no_image"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mtvindia.connect.ui.activity.LoginActivity"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:src="@drawable/img_logo"
            android:layout_marginBottom="20dp"/>

        <com.mtvindia.connect.ui.custom.UbuntuTextView
            android:id="@+id/txt_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello!"
            android:textColor="#fff"
            android:textSize="31.5sp"
            android:fontFamily="ubuntu"/>

        <com.mtvindia.connect.ui.custom.UbuntuTextView
            android:id="@+id/txt_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up and start using the app."
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:textSize="17.5sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/power_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:background="@null"
        android:layout_weight="1"
        android:src="@drawable/img_power" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <com.mtvindia.connect.ui.custom.UbuntuTextView
            android:id="@+id/txt_social"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="Sign up using your social account."
            android:textColor="#fff"
            android:textSize="15sp" />

        <com.mtvindia.connect.ui.custom.UbuntuButton
            android:id="@+id/btn_fb"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_button_state"
            android:text="Facebook"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="14sp" />

        <com.mtvindia.connect.ui.custom.UbuntuButton
            android:id="@+id/btn_gPlus"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_button_state"
            android:text="Google"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>