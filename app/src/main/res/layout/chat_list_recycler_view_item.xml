<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:id="@+id/img_dp"
        android:src="@drawable/img_background"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_dp"
        android:layout_marginLeft="15dp">

        <com.mtvindia.connect.ui.custom.UbuntuMediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_name"
            android:textColor="#fff"
            android:text="Priyanka"
            android:textSize="18sp"/>

        <com.mtvindia.connect.ui.custom.UbuntuTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:id="@+id/txt_chat"
            android:text="I dont know"
            android:textSize="14sp"/>

    </LinearLayout>

    <com.mtvindia.connect.ui.custom.UbuntuTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="#fff"
        android:id="@+id/right_txt_time"
        android:text="45 mins"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view"
        android:background="#ffffff"
        android:alpha=".4"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/img_dp"/>

</RelativeLayout>